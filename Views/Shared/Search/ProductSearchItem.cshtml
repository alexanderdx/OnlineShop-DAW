@model OnlineShopDAW.Models.Product
<li class="list-group-item">
    <div class="row">
        <div class="col-md-4 align-self-center my-1">
            <a href="/Products/Show/@Model.ProductId">
                <img class="img-fluid rounded" src="@Model.Image">
            </a>
        </div>
        <div class="col d-flex flex-column justify-content-between my-1">
            <a href="/Products/Show/@Model.ProductId">
                <h4 class="font-weight-bold">@Model.Name</h4>
            </a>
            <p>@Model.Description</p>
            <div class="d-flex flex-row align-items-center align-self-end">
                <span class="text-right text-danger font-weight-bold">
                    @{ 
                        if (Model.DiscountedPrice == null)
                        {
                            @Model.Price @: RON
                        }
                        else
                        {
                            @Model.DiscountedPrice @: RON
                        }
                    }
                </span>
                <button class="btn btn-primary btn-sm ml-2" type="button">
                    <span class="d-none d-lg-inline" style="margin-right: 8px;">
                        Add to Cart
                    </span>
                    <i class="fa fa-cart-plus"></i>
                </button>
            </div>
        </div>
    </div>
</li>
