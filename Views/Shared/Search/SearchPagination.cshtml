<nav class="mt-4">
    <ul class="pagination justify-content-center">
        @{ 
            if (ViewBag.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <a
                       class="page-link"
                       href="/Search?entity_type=@ViewBag.EntityType&query=@ViewBag.Query&skip=0&take=@ViewBag.Take&order_by=@ViewBag.OrderBy"
                       aria-label="Previous">
                        <span aria-hidden="true">«</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a
                       class="page-link"
                       href="/Search?entity_type=@ViewBag.EntityType&query=@ViewBag.Query&skip=0&take=@ViewBag.Take&order_by=@ViewBag.OrderBy"
                       aria-label="Previous">
                        <span aria-hidden="true">«</span>
                    </a>
                </li>
            }
        }
        @{ 
            for (var i = 1; i <= ViewBag.NumberOfPages; i++)
            {
                if (i == ViewBag.CurrentPage)
                {
                    <li class="page-item active">
                        <a
                           class="page-link"
                           href="/Search?entity_type=@ViewBag.EntityType&query=@ViewBag.Query&skip=@((i - 1) * ViewBag.Take)&take=@ViewBag.Take&order_by=@ViewBag.OrderBy">
                            @i
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a
                           class="page-link"
                           href="/Search?entity_type=@ViewBag.EntityType&query=@ViewBag.Query&skip=@((i - 1) * ViewBag.Take)&take=@ViewBag.Take&order_by=@ViewBag.OrderBy">
                            @i
                        </a>
                    </li>
                }
            }
        }
        @{ 
            if (ViewBag.CurrentPage == ViewBag.NumberOfPages)
            {
                <li class="page-item disabled">
                    <a
                       class="page-link"
                       href="/Search?entity_type=@ViewBag.EntityType&query=@ViewBag.Query&skip=@((ViewBag.NumberOfPages - 1) * ViewBag.Take)&take=@ViewBag.Take&order_by=@ViewBag.OrderBy"
                       aria-label="Next">
                        <span aria-hidden="true">»</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link"
                        href="/Search?entity_type=@ViewBag.EntityType&query=@ViewBag.Query&skip=@((ViewBag.NumberOfPages - 1) * ViewBag.Take)&take=@ViewBag.Take&order_by=@ViewBag.OrderBy"
                        aria-label="Next">
                        <span aria-hidden="true">»</span>
                    </a>
                </li>
            }
        }
    </ul>
</nav>
