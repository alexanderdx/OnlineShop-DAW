@using OnlineShopDAW.Models
@model OnlineShopDAW.Models.Category
<li class="list-group-item" style="background: transparent;">
    <h4>Some products in&nbsp;
        @Html.ActionLink(Model.Name, "Show", "Categories", new { id = Model.CategoryId})
    </h4>
    <div class="card-group">
        @{ 
            foreach (Product p in Model.Products)
            {
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <a href="/Products/Show/@p.ProductId" style="font-size: x-large;">
                                <h4 class="mb-0">@p.Name</h4>
                            </a>
                            <button class="btn btn-outline-danger btn-sm" data-toggle="tooltip"
                                        data-bs-tooltip="" type="button" title="Add to Favourites">
                                <i class="fa fa-heart"></i>
                            </button>
                        </div>
                        <p class="card-text">@p.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <button class="btn btn-primary btn-sm" type="button">
                                <span class="d-none d-lg-inline" style="margin-right: 8px;">
                                    Add to Cart
                                </span>
                            <i class="fa fa-cart-plus"></i>
                            </button>
                            <span class="text-right text-danger font-weight-bold">
                                @{ 
                                    if (p.DiscountedPrice == null)
                                    {
                                        @p.Price @: RON
                                    }
                                    else
                                    {
                                        @p.DiscountedPrice @: RON
                                    }
                                }
                            </span>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</li>
