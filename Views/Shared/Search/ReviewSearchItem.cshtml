@model OnlineShopDAW.Models.Review
<li class="list-group-item">
    <div class="row">
        <div class="col-md-4 align-self-center my-1 text-center">
            <a href="/Products/Show/@Model.Product.ProductId">
                <img class="img-fluid rounded" src="@Model.Product.Image" style="max-height: 16rem;">
            </a>
        </div>
        <div class="col d-flex flex-column justify-content-between my-1">
            <a href="/Products/Show/@Model.Product.ProductId">
                <h4 class="font-weight-bold">@Model.Product.Name</h4>
            </a>
            <p>@Model.Product.Description</p>
            <div class="d-flex flex-row align-items-center align-self-end">
                <span class="text-right text-danger font-weight-bold">
                    @if (Model.Product.DiscountedPrice == null)
                    {
                        @Model.Product.Price
                    }
                    else
                    {
                        @Model.Product.DiscountedPrice
                    }
                </span>
                <button class="btn btn-primary btn-sm ml-2" type="button">
                    <span class="d-none d-lg-inline" style="margin-right: 8px;">
                        Add to Cart
                    </span>
                    <i class="fa fa-cart-plus"></i>
                </button>
            </div>
        </div>
    </div>
    <div class="mt-3 p-3 rounded" style="background: #222;">
        <div class="row">
            <div class="col my-1" style="font-size: large;">
                <span class="font-weight-bold">Review by @Model.ApplicationUser.UserName</span>
            </div>
            <div class="col-auto my-1">
                @{ 
                    for (var n = 0; n < Model.Rating; n++)
                    {
                        @:<i class="fa fa-star" style="font-size: x-large;color: gold;"></i>
                    }
                    for (var n = 0; n < 5 - Model.Rating; n++)
                    {
                        @:<i class="fa fa-star" style="font-size: x-large;"></i>
                    }
                }
            </div>
        </div>
        <p>@Model.Content</p>
    </div>
</li>
