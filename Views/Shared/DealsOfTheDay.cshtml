@using OnlineShopDAW.Models
<h3 id="deals-of-the-day" class="text-center font-weight-bold mb-3">Deals of the Day</h3>
<div class="row">
    <div class="col">
        <div class="card-columns">
            @foreach (Product p in ViewBag.DealsOfTheDay)
            {
                <div class="card">
                    <a href="@p.Image">
                        <img class="img-fluid card-img-top" src="@p.Image">
                    </a>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <a href="/products/show/@p.ProductId.ToString()" style="font-size: x-large;">
                                <h4 class="mb-0">@p.Name</h4>
                            </a><button class="btn btn-outline-danger btn-sm" data-toggle="tooltip"
                                        data-bs-tooltip="" type="button" title="Add to Favourites">
                                <i class="fa fa-heart"></i>
                            </button>
                        </div>
                        <p class="card-text">
                            @p.Description
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <button class="btn btn-primary btn-sm" type="button">
                                <span class="d-none d-lg-inline"
                                      style="margin-right: 8px;">Add to Cart</span>
                                <i class="fa fa-cart-plus"></i>
                            </button>
                            <span class="text-danger text-right font-weight-bold">
                                @p.DiscountedPrice.ToString() RON
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
