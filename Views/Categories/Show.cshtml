
@{
    ViewBag.Title = "Afisare categorie";
}

<div class="container">
    <p style="font-size:22px"><b>@ViewBag.Category.Name</b></p>
    <a class="btn btn-success" style="float:left" href="/categories/edit/@ViewBag.Category.CategoryId">Editare categorie</a>
    <form method="post" action="categories/delete/@ViewBag.Category.CategoryId">
        @Html.HttpMethodOverride(HttpVerbs.Delete)
        <button class="btn btn-danger" style="margin-left:10px" type="submit">Sterge categorie</button>
    </form>
</div>