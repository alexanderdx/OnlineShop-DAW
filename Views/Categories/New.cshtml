@model OnlineShopDAW.Models.Category
@{ ViewBag.Title = "Adaugare Categorie"; }

<h2>Adaugare Categorie</h2>

<form method="post" action="/categories/new">

    @Html.LabelFor(c => c.Name, "Nume categorie")
    <br />

    @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
    <br /><br />

    <button class="btn btn-success" type="submit">Adauga categorie</button>
</form>

