@model OnlineShopDAW.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<p class="text-center">@ViewBag.StatusMessage</p>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="margin-top: 2rem;margin-bottom: 2rem;">
                <div class="card-body" style="padding: 16px;">
                    <h3 class="text-center text-light card-title font-weight-bold">@ViewBag.Title</h3>
                    <h4 class="text-center text-white-50 mb-4">Change your account details</h4>
                    <div class="row my-3">
                        <div class="col">
                            <div class="text-center">
                                <span class="font-weight-bold">Password: </span>
                                [
                                @if (Model.HasPassword)
                                {
                                    @Html.ActionLink("Change your password", "ChangePassword")
                                }
                                else
                                {
                                    @Html.ActionLink("Create", "SetPassword")
                                }
                                ]
                            </div>
                            <div class="text-center">
                                <span class="font-weight-bold">External logins: </span>
                                @Model.Logins.Count [ @Html.ActionLink("Manage", "ManageLogins") ]
                            </div>
                        </div>
                    </div>
                    @using (Html.BeginForm("New", "Manage", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        <div class="form-group">
                            @Html.LabelFor(m => m.AddressLine1)
                            @Html.TextBoxFor(m => m.AddressLine1,
                                new { @class = "form-control", type = "text", autocomplete = "address-line1", value = Model.AddressLine1 })
                            @Html.ValidationMessageFor(m => m.AddressLine1, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.AddressLine2)
                            @Html.TextBoxFor(m => m.AddressLine2,
                                new { @class = "form-control", type = "text", autocomplete = "address-line2", value = Model.AddressLine2 })
                            @Html.ValidationMessageFor(m => m.AddressLine2, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Country)
                                    @Html.TextBoxFor(m => m.Country,
                                        new { @class = "form-control", type = "text", autocomplete = "country-name", value = Model.Country })
                                    @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.City)
                                    @Html.TextBoxFor(m => m.City,
                                        new { @class = "form-control", type = "text", autocomplete = "address-line3", value = Model.City })
                                    @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ZipCode)
                                    @Html.TextBoxFor(m => m.ZipCode,
                                        new { @class = "form-control", type = "text", autocomplete = "postal-code", value = Model.ZipCode })
                                    @Html.ValidationMessageFor(m => m.ZipCode, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="d-flex flex-row justify-content-between align-items-center mt-4">
                            <button class="btn btn-primary font-weight-bold" type="submit">
                                Update User Details
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
